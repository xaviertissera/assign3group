// Function to validate Add New Fundraiser form
function validateFundraiserForm() {
    // Get form elements
    var organizer = document.getElementById("organizer").value;
    var caption = document.getElementById("caption").value;
    var targetFunding = document.getElementById("target_funding").value;
    var city = document.getElementById("city").value;
    var category = document.getElementById("category").value;

    // Validate that all fields are filled
    if (organizer === "" || caption === "" || targetFunding === "" || city === "" || category === "") {
        alert("Please fill in all fields in the Add New Fundraiser form.");
        return false; // Prevent form submission
    }

    // Validate that target funding is a positive number
    if (targetFunding <= 0) {
        alert("Target funding must be a positive number.");
        return false; // Prevent form submission
    }

    return true; // If all validations pass, allow form submission
}

// Function to validate Donation form
function validateDonationForm() {
    // Get form elements
    var donationDate = document.getElementById("date").value;
    var donationAmount = document.getElementById("amount").value;
    var giverName = document.getElementById("giver").value;

    // Validate that all fields are filled
    if (donationDate === "" || donationAmount === "" || giverName === "") {
        alert("Please fill in all fields in the Donation form.");
        return false; // Prevent form submission
    }

    // Validate that donation amount is a positive number
    if (donationAmount <= 0) {
        alert("Donation amount must be a positive number.");
        return false; // Prevent form submission
    }

    return true; // If all validations pass, allow form submission
}

// Attach event listeners to forms
document.querySelector("form[action='/submit_fundraiser']").addEventListener("submit", function (event) {
    if (!validateFundraiserForm()) {
        event.preventDefault(); // Prevent form submission if validation fails
    }
});

document.querySelector("form[action='/submit_donation']").addEventListener("submit", function (event) {
    if (!validateDonationForm()) {
        event.preventDefault(); // Prevent form submission if validation fails
    }
});
